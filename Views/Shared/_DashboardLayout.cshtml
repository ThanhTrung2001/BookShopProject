<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookShopProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/session.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard/sidebar.css" asp-append-version="true" />
</head>
<body>
    <div class="left-section">
        <nav class="sidebar-navigation">
            <div class="close-sidebar-navigation">
                <div class="sidebar-title">Bookshop</div>
            </div>
            <ul class="sidebar-navigation-list">
                <li class="sidebar-link">
                    <img class="sidebar-link-icon" src="/icons/dashboard_64px.png" />
                    Dashboard
                </li>
                <li class="sidebar-link">
                    <img class="sidebar-link-icon" src="/icons/fingerprint_64px.png" />
                    Information
                </li>
                <li class="sidebar-link">
                    <img class="sidebar-link-icon" src="/icons/product_64px.png" />
                    Catalog
                </li>
                <li class="subsidebar-link">
                    Book Lists
                </li>
                <li class="sidebar-link">
                    <img class="sidebar-link-icon" src="/icons/search_client_64px.png" />
                    Customer
                </li>
                <li class="sidebar-link">
                    <img class="sidebar-link-icon" src="/icons/staff_64px.png" />
                    Staff
                </li>
                <li class="sidebar-link">
                    <img class="sidebar-link-icon" src="/icons/logout_rounded_down_64px.png" />
                    Log out
                </li>
            </ul>
        </nav>
    </div>
    <div class="right-section">
        <header class="header">
            <div class="left-header-section">left</div>
            <div class="right-header-section">right</div>
        </header>
        <div class="main-body">
            <main role="main">
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2023 - BookShopProject - <a asp-area="" asp-controller="Dashboard" asp-action="Index">Home</a>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

